@model PDM.ViewModels.PdmViewModel
@using PDM.Code

<form role="form" method="post" asp-action="Create">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Add New PDM Code" })
    <div class="modal-body">
        <div class="form-group">
            <label asp-for="Name">PDM Code</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Item"></label>
            <select class="form-control" asp-for="ItemId" asp-items="@(new SelectList(ViewBag.Items, "Id", "InternalCode"))"></select>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>