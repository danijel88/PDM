@model PDM.Models.AccountViewModels.UserManagementAddRoleViewModel
@{
    ViewData["Title"] = "Add Role To User";
}
<h3>Add For @Model.Email</h3>
<div asp-validation-summary="All"></div>
<form asp-controller="UserManagement" asp-action="AddRole">
    <div class="form-group">
        <input asp-for="UserId" class="form-control" type="hidden" />
    </div>
    <div class="form-group">
        <label asp-for="NewRole"></label>
        <select class="form-control" asp-for="NewRole" asp-items="@Model.Roles"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Role" class="btn btn-success" />
    </div>
</form>