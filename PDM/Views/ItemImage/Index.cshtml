@model IEnumerable<PDM.ViewModels.ItemImageViewModel>
@using PDM.Code
@{
    ViewData["Title"] = "Item Images";

}

<hr />
<a asp-action="Index" asp-controller="Item"><i class="glyphicon glyphicon-arrow-left"></i>Back To Item List</a><br /><br />
<a id="createItem" data-toggle="modal" asp-action="Create" data-target="#myModal" class="btn btn-success">
    <i class="glyphicon glyphicon-plus"></i> Add New
</a>
<hr />
@if (Model.Count() == 0)
{
    <p>There is no images.</p>
}
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <img src="@item.Name" width="300" height="300" class="img-responsive list-inline" /> <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" data-target="#myModal" data-toggle="modal"><i class="glyphicon glyphicon-trash"></i> Delete</a>
            </div>

        }
    </div>
</div>



@Html.Partial("_Modal", new BootstrapModel { ID = "myModal", AreaLabeledId = "modal-action-item-type", Size = ModalSize.Large })